<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<fieldset
				name="kicktempmenu">
			<field  name="show_caret"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_SHOW_CARET_LABEL"
			        description="COM_MENUS_FIELD_SHOW_CARET_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="bold"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_BOLD_LABEL"
			        description="COM_MENUS_FIELD_BOLD_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="li_class"
			        type="text"
			        label="COM_MENUS_FIELD_LI_CLASS_LABEL"
			        description="COM_MENUS_FIELD_LI_CLASS_DESC"
					/>

			<field  name="icon"
			        type="text"
			        label="COM_MENUS_FIELD_ICON_LABEL"
			        description="COM_MENUS_FIELD_ICON_DESC"
					/>
			<field  name="subtitle"
			        type="text"
			        label="COM_MENUS_FIELD_SUBTITLE_LABEL"
			        description="COM_MENUS_FIELD_SUBTITLE_DESC"
					/>
			<field  name="sr_only"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_SR_ONLY_LABEL"
			        description="COM_MENUS_FIELD_SR_ONLY_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="to_left"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_TO_LEFT_LABEL"
			        description="COM_MENUS_FIELD_TO_LEFT_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="scrollto"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_SCROLLTO_LABEL"
			        description="COM_MENUS_FIELD_SCROLLTO_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="loadmodule"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_LOADMODULE_LABEL"
			        description="COM_MENUS_FIELD_LOADMODULE_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field
					name="module_id"
					type="sql"
					default="0"
					label="COM_MENUS_FIELD_MODULE_ID_LABEL"
					description="COM_MENUS_FIELD_MODULE_ID_DESC"
					query="SELECT id, CONCAT (title, ' - ', position ) as ctitle FROM #__modules where access='1' and published='1'" key_field="id" value_field="ctitle"
					/>
			<field
					name="modstyle"
					type="chromestyle"
					label="COM_MENUS_FIELD_MODULE_STYLE_LABEL"
					description="COM_MENUS_FIELD_MODULE_STYLE_DESC"
					/>
		</fieldset>
		<fieldset
				name="kicktempmegamenu">
			<field  name="megamenu"
			        type="radio"
			        class="btn-group"
			        default="0"
			        label="COM_MENUS_FIELD_MEGAMENU_LABEL"
			        description="COM_MENUS_FIELD_MEGAMENU_DESC"
					>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field  name="megaclass"
			        type="text"
			        label="COM_MENUS_FIELD_MEGACLASS_LABEL"
			        description="COM_MENUS_FIELD_MEGACLASS_DESC"
					/>
			<field  name="megatitle"
			        type="text"
			        label="COM_MENUS_FIELD_MEGATITLE_LABEL"
			        description="COM_MENUS_FIELD_MEGATITLE_DESC"
					/>
			<field  name="megatitleicon"
			        type="text"
			        label="COM_MENUS_FIELD_MEGATITLEICON_LABEL"
			        description="COM_MENUS_FIELD_MEGATITLEICON_DESC"
					/>
		</fieldset>
	</fields>
</form>
